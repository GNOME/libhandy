{
  "app-id": "sm.puri.Handy.Demo",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "command": "handy-1-demo",
  "finish-args": [
    "--device=all",
    "--share=ipc",
    "--socket=wayland",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "libhandy",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
        "-Dglade_catalog=disabled",
        "-Dintrospection=disabled",
        "-Dtests=false",
        "-Dvapi=false"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://source.puri.sm/Librem5/libhandy.git"
        }
      ]
    }
  ]
}
