{
  "app-id": "sm.puri.Handy.Example",
  "runtime": "org.gnome.Platform",
  "runtime-version": "master",
  "sdk": "org.gnome.Sdk",
  "command": "example",
  "finish-args": [
    "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
    "--share=ipc", "--socket=x11",
    "--socket=wayland",
    "--device=all"
  ],
  "build-options": {
    "cflags": "-O2 -g",
    "cxxflags": "-O2 -g",
    "env": {
      "V": "1"
    }
  },
  "modules": [
    {
      "name": "libhandy",
      "buildsystem": "meson",
      "builddir": true,
      "config-opts": [
          "-Dexamples=true"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://source.puri.sm/Librem5/libhandy.git"
        }
      ]
    }
  ]
}
